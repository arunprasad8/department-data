# Sample environment variables for production deployment
# Copy this to ".env" and fill in the real values.

# Application
PORT=3000
NODE_ENV=production
SESSION_SECRET=replace_with_a_strong_random_string
DATABASE_URL=postgres://user:password@hostname:5432/dbname
# use PostgreSQL or any production database; example shown above

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=yourpassword
SMTP_FROM="CIA Classroom <no-reply@example.com>"

# Google API (if using Classroom integration)
GOOGLE_SERVICE_ACCOUNT_JSON={}
GOOGLE_IMPERSONATE_USER=

# Upload settings
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=52428800  # 50MB default

# Secrets for authentication
JWT_SECRET=replace_this_as_well_if_you_add_jwt_support
